# ===============================
# DATABASE
# ===============================
# Usado quando a aplicação roda via Docker (docker-compose)
DATABASE_URL=postgresql://USER:PASSWORD@DB_HOST:5432/DB_NAME

# Usado quando a aplicação roda fora do Docker
DATABASE_URL_LOCAL=postgresql://USER:PASSWORD@localhost:5432/DB_NAME


# ===============================
# AUTH
# ===============================

JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d


# ===============================
# MAIL (SMTP / Mailtrap)
# ===============================

MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=your_mail_user
MAIL_PASS=your_mail_pass
MAIL_FROM=no-reply@agenda.com
